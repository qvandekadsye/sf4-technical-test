{% extends 'base.html.twig' %}

{% block title %}Recherche d'utilisateur Github{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Rechercher un utilisateur github</h1>

    Entrez le nom d'une utilisateur Github dans le champ ci-dessous :
    {{ form_start(form) }}
    {{ form_row(form.githubsearch) }}
    {{ form_end(form) }}
    <div class="gitHubUserWrapper">
        {% if query is defined %}
        <p>RÃ©sultat pour {{ query }}</p>
        {% endif %}

        {% if users is defined %}
        <ul>
            {% for user in users %}
            <li>
                <a href={{ path("comment",{'username': user.login}) }}>{{ user.login }}</a>
            </li>
            {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>
{% endblock %}
