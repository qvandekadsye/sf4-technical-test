{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 100%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Inscrivez-vous pour pouvoir continuer</h1>


        {{ form_start(form) }}
        {{ form_label(form.username, 'Username') }}
        {{ form_widget(form.username) }}
        {{ form_label(form.plainPassword, 'Password') }}
        {{ form_widget(form.plainPassword) }}
        {{ form_label(form.githubApiKey, 'Github') }}
        {{ form_widget(form.githubApiKey) }}
        {{ form_end(form) }}

    </div>
{% endblock %}
